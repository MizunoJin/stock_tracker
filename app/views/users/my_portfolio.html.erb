<h1>My_portofolio</h1>

<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_with url: search_stock_path, method: :get, remote: true do |f| %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= f.text_field :stock, placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: "submit", class: "btn btn-success" do %>
      <%= fa_icon "search 2x" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

<div id="results">
</div>

<% if @tracked_stocks %>
  <%= render 'stocks/list' %>
<% end %>
<h1>My friends</h1>

<div class="search-area">
  <h3>Search friends</h3>
  <%= form_with url: search_friend_path, method: :get, remote: true do |f| %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= f.text_field :friend, placeholder: "friend_name", autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: "submit", class: "btn btn-success" do %>
      <%= fa_icon "search 2x" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

<div id="results">
</div>

<% if @friends %>
<%= render 'friends/list' %>
<% end %>